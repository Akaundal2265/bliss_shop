<div class="image_content_overlay_wrp">
  <div class="image_content_overlay_inner">
     <div class="main_imag_wrp">
       {% if section.settings.image != blank %}<img class=" {% if section.settings.mobile_image != blank %}only_desktop{% endif %} desktop_image" src="{{ section.settings.image | img_url:'master' }}" height="" width="">{% endif %}
        {% if section.settings.mobile_image != blank %}<img class="only_mobile mobile_image" src="{{ section.settings.mobile_image | img_url:'master' }}" height="" width="">{% endif %}
     </div>
       <div class="overlay_content_wrp cont_pos_{{ section.settings.content_position }}">
    <div class="Container">
         {% for block in section.blocks %}
           {% case block.type %}
             {% when 'sub_heading' %}
            {% if block.settings.sub_heading != blank %}
              <div class="sub_heading_wrp">
                <h4>{{ block.settings.sub_heading }}</h4>
              </div>
             {% endif %} 
            
             {% when 'heading' %}
            {% if block.settings.heading != blank %}
              <div class="heading_wrp">
                <h2>{{ block.settings.heading }}</h2>
              </div>
             {% endif %} 

            {% when 'description' %}
            {% if block.settings.description != blank %}
              <div class="description_wrp">
                {{ block.settings.description }}
              </div>
             {% endif %} 

            {% when 'button' %}
            {% if block.settings.button_text != blank %}
              <div class="button_wrp">
                <a class="custom-button" href="{{ block.settings.button_link }}">
                  {{ block.settings.button_text }}
                </a>
              </div>
             {% endif %} 
           {% endcase %}
         {% endfor %}
     </div>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Custom Image Overlay Text",
    "settings": [
       {
          "type": "image_picker",
          "id": "image",
          "label": "Desktop Image"
        },
       {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Image"
        },
      {
          "type": "select",
          "id": "content_position",
          "label": "Content position",
          "options": [
            {
              "value": "middleLeft",
              "label": "Middle left"
            },
            {
              "value": "middleCenter",
              "label": "Middle center"
            },
            {
              "value": "middleRight",
              "label": "Middle right"
            },
            {
              "value": "bottomLeft",
              "label": "Bottom left"
            },
            {
              "value": "bottomCenter",
              "label": "Bottom center"
            },
            {
              "value": "bottomRight",
              "label": "Bottom right"
            }
          ],
          "default": "bottomLeft"
        }
    ],
    "blocks": [
    {
      "type": "sub_heading",
      "name":"Sub heading",
      "settings": [
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub heading",
          "default":"Lorem ipsum dolor sit amet"
        }
      ]
    },
    {
      "type": "heading",
      "name":"Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default":"Lorem ipsum dolor sit amet"
        }
      ]
    },
    {
      "type": "description",
      "name":"Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    },
    {
      "type": "button",
      "name":"Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    }
  ],
    "presets": [
        {
          "name": "Custom Image Overlay Text",
          "blocks": [
            {
              "type": "sub_heading"
            },
            {
              "type": "heading"
            }
          ]
        }
    ]
  }
{% endschema %}