<div class="image_with_content_wrp">
  <div class="Container custom_container">
    <div class="image_with_content_inner">
      <div class="main_left">
        {% if section.settings.main_img != blank %}
          <div class="main_imag_wrp">
            <img src="{{ section.settings.main_img | img_url:'master' }}" height="" width=""> 
          </div>
        {% endif %}
      </div>
      <div class="main_right">
        <div class="right_content_inner">
        {% for block in section.blocks %}
          {% case block.type %}
            
            {% when 'sub_heading' %}
            {% if block.settings.sub_heading != blank %}
              <div class="sub_heading_wrp">
                <h4>{{ block.settings.sub_heading }}</h4>
              </div>
             {% endif %} 
            
             {% when 'heading' %}
            {% if block.settings.heading != blank %}
              <div class="heading_wrp">
                <h2 class="heading-medium">{{ block.settings.heading }}</h2>
              </div>
             {% endif %} 

            {% when 'description' %}
            {% if block.settings.description != blank %}
              <div class="description_wrp">
                {{ block.settings.description }}
              </div>
             {% endif %} 
            
            {% endcase %}
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Image with Content",
  "settings": [
        {
          "type": "image_picker",
          "id": "main_img",
          "label": "Image"
        }
  ],
  "blocks": [
    {
      "type": "sub_heading",
      "name":"Sub heading",
      "settings": [
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub heading"
        }
      ]
    },
    {
      "type": "heading",
      "name":"Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "description",
      "name":"Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image with Content",
      "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "sub_heading"
          }
      ]
    }
  ]
}
{% endschema %}
