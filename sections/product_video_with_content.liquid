<div class="product_video_content video_with_content_wrp">
  <div class="Container Container--narrow">
     <div class="feature_section_header">
        <h2 class="heading-medium">{{ section.settings.heading }}</h2>
      </div>
    <div class="video_with_content_inner">
      <div class="main_left">
        {% if section.settings.video != blank %}
          <div class="main_imag_wrp">
            {{ section.settings.video | video_tag: autoplay: true, loop: true, controls: false, muted: true }}
         
          </div>
        {% endif %}
          {% if section.settings.mvideo != blank %}
            <div class="mobile_how_work">
            {{ section.settings.mvideo | video_tag: autoplay: true, loop: true, controls: false, muted: true }}
                </div>
         {% endif %}
      </div>
      <div class="main_right">
        <div class="right_content_inner">
        {% for block in section.blocks %}
          {% case block.type %}
            
            {% when 'sub_heading' %}
            {% if block.settings.sub_heading != blank %}
              <div class="sub_heading_wrp">
                <h4>{{ block.settings.sub_heading }}</h4>
              </div>
             {% endif %} 
            
             {% when 'heading' %}
            {% if block.settings.heading != blank %}
              <div class="heading_wrp">
                <h2 class="heading-medium">{{ block.settings.heading }}</h2>
              </div>
             {% endif %} 

            {% when 'description' %}
            {% if block.settings.description != blank %}
              <div class="description_wrp">
                {{ block.settings.description }}
              </div>
             {% endif %} 
            
            {% endcase %}
        {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Product Video Content",
  "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Section Heading"
        },
        {
          "type": "video",
          "id": "video",
          "label": "Video"
        },
     {
          "type": "video",
          "id": "mvideo",
          "label": "Mobile Video"
        }

  ],
  "blocks": [
    {
      "type": "sub_heading",
      "name":"Sub heading",
      "settings": [
        {
          "type": "text",
          "id": "sub_heading",
          "label": "Sub heading"
        }
      ]
    },
    {
      "type": "heading",
      "name":"Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    },
    {
      "type": "description",
      "name":"Description",
      "settings": [
        {
          "type": "richtext",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Video Content",
      "blocks": [
          {
            "type": "heading"
          },
          {
            "type": "description"
          }
      ]
    }
  ]
}
{% endschema %}
